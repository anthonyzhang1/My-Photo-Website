<div class="main-content-container" id="reset-password-div">
    <header class="site-header" id="reset-password-site-header">
        <h1>Reset Password</h1>
        <p>Enter your username and email and we will email you a link to reset your password.</p>
    </header>
    <div class="site-content" id="reset-password-site-content">
        <form id="reset-password-form" method="POST" action="users/reset-password"
         enctype="application/x-www-form-urlencoded">
            <label for="reset-password-username">Username</label>
            <input type="text" id="reset-password-username" placeholder="Username" name="username" required/>
            <label for="reset-password-email">Email</label>
            <input type="email" id="reset-password-email" placeholder="Email" name="email" required/>

            <button type="submit">Reset Password</button>
            <a href="/login">Remember your password?</a>
        </form>
    </div>
</div>